# Setting Screen Layout
#Here we will keep settings to clear up cluttering in the homescreen
<SettingsScreen>:
	MDGridLayout:
		cols: 1
		rows:3
		MDToolbar:
			title:"Settings"
			icon:"cogs"
			type: "top"
			elevation: 10
			#size_hint: 1, .1
			left_action_items:[['arrow-left', lambda x: app.change_screen("home_screen")]]

		ScrollView:
			size_hint: 1 , .5
			do_scroll_y: False
			MDList:	
								
				OneLineAvatarListItem:
					text: "Change Theme Color"		
					ripple_scale: 0

					IconLeftWidget:
						icon: 'palette'

					
					Spinner:
						size_hint: (0.3, 0.5)
						pos_hint: {'right': .95 , 'center_y': .5}
						text: app.getPalette()
						values:"Red", "Pink", "Purple", "DeepPurple", "Indigo", "Blue", "LightBlue", "Cyan", "Teal", "Green", "LightGreen", "Lime", "Yellow", "Amber", "Orange", "DeepOrange", "Brown", "Gray", "BlueGray"

						bg_color: app.theme_cls.primary_color

						on_text:
							app.setPalette(self.text)

					#"Red", "Pink", "Purple", "DeepPurple", "Indigo", "Blue", "LightBlue", "Cyan", "Teal", "Green", "LightGreen", "Lime", "Yellow", "Amber", "Orange", "DeepOrange", "Brown", "Gray", "BlueGray"

				OneLineAvatarListItem:
					text: "Enable Dark Mode"
					ripple_scale: 0

					IconLeftWidget:
						icon: 'theme-light-dark'


					MDSwitch:
						id: darkmodeswitch
						pos_hint: {'right': .8 , 'center_y': .5}
						active: app.getDarkMode()
						width: dp(48)
						on_active: app.toggleDarkMode(self, self.active)
								

		MDLabel:


			
