#Home Screen Layout
#:import get_color_from_hex kivy.utils.get_color_from_hex
<HomeScreen>:
	MDFloatLayout:
		#Bottom Navigation Bar		
		MDBottomNavigation:
			#panel_color: get_color_from_hex("#e59efaff")
			#selected_color_background: get_color_from_hex("#e59efaff")
			#text_color_active: 0, 0, 0, 1
#================================================================================================
#Home Screen
			MDBottomNavigationItem:
				name: 'screen 1'
				text: 'Home'
				icon: 'home'
#+++++++++++++++Home Screens Layout+++++++++++++++++++++++++++++++++
				MDLabel:
					text: 'Home'
					halign: 'center'
				
#===============================================================================================
#Youtube Video Screen
			MDBottomNavigationItem:
				name: 'screen 2'
				text: 'Video'
				icon: 'youtube'

#+++++++++++++++YT/Video Screen Layout+++++++++++++++++++++++++++++++++
				MDLabel:
					text: 'Video'
					halign: 'center'
				

#===========================================================================================
#Weather Screen
			MDBottomNavigationItem:
				name: 'screen 3'
				text: 'Weather'
				icon: 'weather-partly-cloudy'
#+++++++++++++++Weather Screen Layout+++++++++++++++++++++++++++++++++++++++++++++++++++++
				MDLabel:
					text: 'Weather'
					halign: 'center'


				



					
#==========================================================================================
#Settings Screen (Connected the Bottom Navigation)
			MDBottomNavigationItem:
				name: 'settings_screen'
				text: 'Profile'
				icon: 'account-circle-outline'
#+++++++++++++++Settings Screens Layout+++++++++++++++++++++++++++++++++
				MDGridLayout:
					#orientation: 'vertical'	
					cols: 1
					rows: 3	
					MDToolbar:
						id:uName
						size_hint: 1, .1
						title:app.getName()+"'s Profile"
					MDGridLayout:
						size_hint: 1,.3
						rows:1
						cols: 3
						#row_default_height: 200
						#row_force_default: True
						#padding: [100, 10, 100, 10]
						MDLabel:
							#width: 50

						Widget:
							size_hint_x: None
							size_hint_y: None
							size: app.getMinSize(self.parent.width, self.parent.height), app.getMinSize(self.parent.width, self.parent.height)
							#size_hint: .6,1
							canvas:
								Color:
									rgb: 1, 1, 1
								Ellipse:
									size: self.height, self.height#app.getMinSize(self.width, self.height), app.getMinSize(self.width, self.height)
									pos: self.pos
									source:app.getProfilePic()
									angle_start: 0
									angle_end: 360

						MDLabel:
							#width: 50

					ScrollView:
						size_hint: 1 , .5
						do_scroll_y: False
						MDList:	
								
							OneLineAvatarListItem:
								text: "Edit Profile"

								IconLeftWidget:
									icon: 'account-circle'	
							OneLineAvatarListItem:
								text: "Accessibility and Language"

								IconLeftWidget:
									icon: 'human'

							OneLineAvatarListItem:
								text: "Enable Dark Mode"
								ripple_scale: 0

								IconLeftWidget:
									icon: 'theme-light-dark'

							
								MDSwitch:
									pos_hint: {'right': .8 , 'center_y': .5}
									active: app.getDarkMode()
									width: dp(48)
									on_active: app.toggleDarkMode(self, self.active)

							OneLineAvatarListItem:
								text: "Terms of Service and Privacy"

								IconLeftWidget:
									icon: 'text-box-multiple'

							OneLineAvatarListItem:
								text: "Settings"
								on_release: app.change_screen("settings_screen")

								IconLeftWidget:
									icon: 'cogs'
#====================================================================================
