# Login Screen Layout
<LoginScreen>:
	#Anchor Layout to attach everything to center screen
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		#Box Layout stacks our widgets on top of each other using orientation: 'vertical'
		MDBoxLayout:
			orientation: 'vertical'
			
			MDLabel:   #The Heading to our application
				text:"Welcome to [i]Solaire[i]!"
				halign: "center"
				markup: True
				bold: True
				font_style: 'H4'
				font_name: "Pacifico-Regular.ttf"
				

			MDTextField:  #Username Text Field; Max Length 20; 
				id: usr
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				size_hint_x:None
				width: 200
				hint_text: "Username"
				helper_text:"Required"
				helper_text_mode: "on_focus"
				max_text_length: 20
				padding: [6, 6, 6, 6]

			
			MDTextField:  #Password Text Field; Max Length 10; Mask on
				id: pw
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				size_hint_x:None
				width: 200
				hint_text: "Password"
				helper_text:"Required"
				helper_text_mode: "on_focus"
				password: True
				password_mask: '*'
				icon_right: 'eye-off'
				max_text_length: 10

			#GridLayout holds our button between two empty labels
			MDGridLayout:
				size_hint: 1 ,.3
				cols:3
				rows:1
				MDLabel:
				MDRaisedButton:
					text: "Submit"
					on_release: app.login(usr.text,pw.text)
				MDLabel:
			#GridLayout: Bottom Icon Switch and devlopment team name caption
			MDGridLayout:
				size_hint: .95, .125
				rows : 1
				MDIconButton:
					icon:"face-recognition"
					theme_icon_color: "Custom"
					icon_color: app.theme_cls.primary_color
				MDIconButton:
					icon:"account-plus-outline"
					theme_icon_color: "Custom"
					icon_color: app.theme_cls.primary_color
				MDLabel:
					text: "Made by AMCJ"
					halign: 'right'
					font_style: 'Caption'







