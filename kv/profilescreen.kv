#Edit Profile Screen
# Setting Screen Layout
#Here we will keep settings to clear up cluttering in the homescreen
<ProfileScreen>:
	MDGridLayout:
		cols: 1
		rows:3
		MDToolbar:
			title:"Edit Profile"
			icon:"account-circle"
			type: "top"
			elevation: 10
			#size_hint: 1, .1
			left_action_items:[['arrow-left', lambda x: app.change_screen("home_screen")]]

		ScrollView:
			size_hint: 1 , .5
			do_scroll_y: False
			MDList:	
								
				OneLineAvatarListItem:
					text: "Change Profile Picture"		
					ripple_scale: 0

					IconLeftWidget:
						icon: 'image'

					MDRoundFlatIconButton:
						text: "Upload Image"
						icon: "folder"
						pos_hint:{'right': .95 , 'center_y': .5}
						on_release: app.file_manager_open() 

					
				OneLineAvatarListItem:
					#text: "Change Display Name"
					ripple_scale: 0

					IconLeftWidget:
						icon: 'rename-box'

					MDTextField:  #Username Text Field; Max Length 20; 
						id: name_e
						pos_hint: {'right': .65, 'center_y': 0.5}
						size_hint_x:None
						width: 200
						hint_text: app.getName()
						helper_text:"Change Display Name"
						helper_text_mode: "persistent"
						max_text_length: 20
						padding: [6, 6, 6, 6]
					MDIconButton:
						icon: "upload"
						pos_hint: {'right': .95, 'center_y': 0.5}
						on_release: app.changeName(name_e.text)



				OneLineAvatarListItem:
					#text: "Change Email"
					ripple_scale: 0

					IconLeftWidget:
						icon: 'email'

					MDTextField:  #Email Text Field; Max Length 25; 
						id: email_e
						pos_hint: {'right': .65, 'center_y': 0.5}
						size_hint_x:None
						width: 200
						hint_text: app.getEmail()
						helper_text:"Change Email"
						helper_text_mode: "persistent"
						max_text_length: 25
						padding: [6, 6, 6, 6]
					MDIconButton:
						icon: "upload"
						pos_hint: {'right': .95, 'center_y': 0.5}
						on_release: app.changeEmail(email_e.text)





				OneLineAvatarListItem:
					#text: "Change Password"
					ripple_scale: 0

					IconLeftWidget:
						icon: 'lock'

					MDTextField:  #Email Text Field; Max Length 25; 
						id: pass_e
						pos_hint: {'right': .65, 'center_y': 0.5}
						size_hint_x:None
						width: 200
						hint_text: "Password"
						helper_text:"Change Password"
						helper_text_mode: "persistent"
						password: True
						password_mask: '*'
						max_text_length: 10
						padding: [6, 6, 6, 6]

					MDIconButton:
						icon: "upload"
						pos_hint: {'right': .95, 'center_y': 0.5}
						on_release: app.changePW(pass_e.text)


