#Home Screen Layout
#:import get_color_from_hex kivy.utils.get_color_from_hex
<HomeScreen>:
	MDFloatLayout:
		#NavDrawer Profile

		#Bottom Navigation Bar			
		MDBottomNavigation:
			#panel_color: get_color_from_hex("#e59efaff")
			#selected_color_background: get_color_from_hex("#e59efaff")
			#text_color_active: 0, 0, 0, 1

			MDBottomNavigationItem:
				name: 'screen 1'
				text: 'Home'
				icon: 'home'

				MDLabel:
					text: 'Home'
					halign: 'center'




			MDBottomNavigationItem:
				name: 'screen 2'
				text: 'Video'
				icon: 'youtube'


				MDLabel:
					text: 'Video'
					halign: 'center'
				


			MDBottomNavigationItem:
				name: 'screen 3'
				text: 'Weather'
				icon: 'weather-partly-cloudy'

				MDLabel:
					text: 'Weather'
					halign: 'center'


			




