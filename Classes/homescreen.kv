#Home Screen Layout
<HomeScreen>:
	FloatLayout:
		
		# Top Row Grid with 1 row
		GridLayout:
			rows:1
			pos_hint: {"top": 1, "left":1}
			size_hint: 1, .1
			#Top Icons
			Label:
				markup: True
				text: '[color=000000]Home[/color]' 
				font_size: 35
#Bottom Navigation Bar			
		GridLayout:
			rows:1
			pos_hint: {"bottom": 1, "left":1}
			size_hint: 1, .1
			#Bottom Icons
			#Home Button
			Label:

			ImageButton:
				source: 
					"Images\Icons\HomeIcon.png"
				on_press:
					self.source ="Images\Icons\HomeIcon2.png"
				on_release:
					app.change_screen("home_screen")
					self.source = "Images\Icons\HomeIcon.png"

			#Settings Button		
			ImageButton:
				source: 
					"Images\Icons\SettingsGear.png"
				on_press:
					self.source ="Images\Icons\SettingsGear2.png"
				on_release:
					app.change_screen("settings_screen")
					self.source ="Images\Icons\SettingsGear.png"


